MDBottomNavigation:
    panel_color : 0, 107 / 255, 153 / 255, 1

	MDBottomNavigationItem:
		name: "DisneyMovieList"
		text: "Movies"
        icon: "movie"
		
		MDScreen:
			
			AsyncImage:
				pos_hint: {"center_x": .5, "center_y": .9}
				size_hint_y: .1
				source: "assets/images/Disney_Logo.png"
			
			
			MDCard:
				size_hint_y: .8
				elevation: 7
				padding: 25
				spacing: 25
				orientation: "vertical"
				
				MDSwiper:
					id: swiper
					size_hint_y: .7
	
	MDBottomNavigationItem:
		name: "MovieInfo"
		text: "Info & Trailer"
        icon: "movie-filter"
		
		MDScreen:
			
			MDFloatLayout:
				
				FitImage:
					id: movie_image
					size_hint: 1, 1
				
				AsyncImage:
					id: title_image
					pos_hint: {"center_x": .2, "center_y": .6}
					size_hint: .4, .2
				
				MDTextField:
					id: info_box
					readonly: True
					mode: "rectangle"
					multiline: True
					pos_hint: {"center_x" : .2, "center_y" : .25}
					size_hint: .3, .4
					hint_text_color_normal: "red"
					line_color_normal: "cyan"
					text_color_normal: "white"
				
				MDFloatingActionButton:
					id: trailer_button
					icon: "movie-filter"
					pos_hint: {"center_x" : .9, "center_y" : .15}
					type: "large"
					md_bg_color: "#f8d7e3"
					theme_icon_color: "Custom"
					icon_color: "#311021"
	
	MDBottomNavigationItem:
		name : "Predictor"
		text : "AI"
		icon : "brain"
		
		MDScreen:
			
			MDBoxLayout:
			    orientation : "vertical"
			    padding : 10
			    spacing : 10
		        
		        AsyncImage:
					pos_hint: {"center_x": .5, "center_y": .9}
					size_hint_y: .1
					source: "assets/images/Disney_Logo.png"
		        
		        Camera:
		            id: camera
		            resolution: (640,480)
		            size_hint_y: 0.7
		            play: True
		        
		        MDRoundFlatButton:
		            text: "Predict"
		            pos_hint: {"center_x" : 0.5}
		            on_release: app.capture_and_predict()
		        
		        MDRectangleFlatButton:
		        	id: prediction
					text: "Prediction" 
					pos_hint: {"center_x": .5}
					size_hint: 0.6, .15
					bold: True