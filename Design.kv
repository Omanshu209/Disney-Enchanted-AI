MDBottomNavigation:
    panel_color : 0, 107 / 255, 153 / 255, 1

	MDBottomNavigationItem:
		name: "DisneyMovieList"
		text: "Movies List"
        icon: "movie"
		
		MDScreen:
			
			AsyncImage:
				pos_hint: {"center_x": .5, "center_y": .9}
				size_hint_y: .1
				source: "assets/images/Disney_Logo.png"
			
			
			MDCard:
				size_hint_y: .8
				elevation: 7
				padding: 25
				spacing: 25
				orientation: "vertical"
				
				MDSwiper:
					id: swiper
					size_hint_y: .7
	
	MDBottomNavigationItem:
		name : "Predictor"
		text : "AI"
		icon : "brain"
		
		MDScreen:
			
			MDBoxLayout:
			    orientation : "vertical"
			    padding : 10
			    spacing : 10
		        
		        AsyncImage:
					pos_hint: {"center_x": .5, "center_y": .9}
					size_hint_y: .1
					source: "assets/images/Disney_Logo.png"
		        
		        Camera:
		            id: camera
		            resolution: (640,480)
		            size_hint_y: 0.7
		            play: True
		        
		        MDRoundFlatButton:
		            text: "Predict"
		            pos_hint: {"center_x" : 0.5}
		            on_release: app.capture_and_predict()
		        
		        MDRectangleFlatButton:
		        	id: prediction
					text: "Prediction" 
					pos_hint: {"center_x": .5}
					size_hint: 0.6, .15
					bold: True